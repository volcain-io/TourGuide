<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_image_view"
        android:layout_width="@dimen/list_item_width"
        android:layout_height="@dimen/list_item_height"
        tools:src="@drawable/sightseeing_former_party_ground" />

    <LinearLayout
        android:id="@+id/item_container"
        style="@style/ItemContainerStyle">

        <LinearLayout
            android:id="@+id/text_container"
            style="@style/TextContainerStyle">

            <TextView
                android:id="@+id/place_name_text_view"
                style="@style/PlaceNameTextViewStyle"
                tools:text="@string/sightseeing_former_party_ground_name" />

            <TextView
                android:id="@+id/price_text_view"
                style="@style/PlaceInfoTextViewStyle"
                android:text="@string/price"
                tools:text="@string/price" />

            <TextView
                android:id="@+id/entry_price_text_view"
                style="@style/PlaceInfoTextViewStyle"
                tools:text="@string/sightseeing_former_party_ground_entry_price" />
        </LinearLayout>

        <ImageView
            android:id="@+id/list_item_info_image_view"
            style="@style/PlaceInfoIconImageViewStyle" />

    </LinearLayout>

</LinearLayout>