<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_image_view"
        android:layout_width="@dimen/list_item_width"
        android:layout_height="@dimen/list_item_height"
        tools:src="@drawable/sightseeing_former_party_ground" />

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/short_desc_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="top"
                android:lines="3"
                android:scrollHorizontally="true"
                android:textAppearance="?android:textAppearanceListItemSmall"
                android:textColor="@android:color/black"
                tools:text="@string/sightseeing_former_party_ground_short_desc" />

            <TextView
                android:id="@+id/entry_price_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textAppearance="?android:textAppearance"
                android:textColor="@android:color/black"
                tools:text="7,- EUR" />
        </LinearLayout>

        <ImageView
            android:id="@+id/list_item_play_audio_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_directions_black_24dp" />

    </LinearLayout>

</LinearLayout>